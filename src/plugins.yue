import "macros" as { $ }

cfg = 
  ui:
    * "everforest"
    * "lualine"
    * "menu"
    * "smear_cursor"
  editor:
    * "which-key"
    * "actions_preview"
    * "blink"
    * "conform"
    * "gitsigns"
    * "go"
    * "hover"
    * "markdown-preview"
    * "outline"
    * "overseer"
    * "rust"
    * "snacks"
    * "treesitter"

export default {
  setup: ->
    import "nvim-autopairs" as npairs

    $do_plugin_cfg "ui", v for v in *cfg.ui
    $do_plugin_cfg "editor", v for v in *cfg.editor

    -- [[ misc config ]]
    vim.notify = require "notify"
    npairs.setup!
}
